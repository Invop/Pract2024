@page "/edit-author-page"

@attribute [Authorize]

<PageTitle>EditProfile</PageTitle>
<RadzenRow>
    <RadzenStack Style="background-color: #eee6e6; color: f2eeee Hex 242 R 238 G; padding: 20px; border-radius: 10px">
        <RadzenTemplateForm>
            <ChildContent>
                <RadzenRow>
                    <RadzenColumn Size="12" SizeMD="12">
                        <RadzenText Text="You can edit your author page" Style="font-weight: bold; font-size: 25px" />
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3" >
                        <RadzenLabel Component="Username" style="width: 100%; margin-top: 8px" Text="Username"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Name="Username" Placeholder="username" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Name" style="width: 100%; margin-top: 8px" Text="Name"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Name="Name" Placeholder="Name" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Surname" style="width: 100%; margin-top: 8px" Text="Surname"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Name="Surname" Placeholder="Surname" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Text="Birthday" Component="DatePickerDateOnlyType" Style="margin-right: 8px; vertical-align: middle; margin-top: 8px"/>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">    
                        <RadzenDatePicker @bind-Value="@value" DateFormat="MM/dd/yyyy" Name="DatePickerDateOnlyType"/>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Text="Your avatar" TextStyle="TextStyle.Subtitle2"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        @*https://blazor.radzen.com/fileinput*@
                        <InputFile></InputFile> 
                    </RadzenColumn>    

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Text="Title" TextStyle="TextStyle.Subtitle2"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn class="w-100" Size="12" SizeMD="9">
                        <RadzenTextArea Placeholder="Your page title" Rows="3" Cols="50" Style="border-radius: 10px"></RadzenTextArea>                    
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Text="Description" TextStyle="TextStyle.Subtitle2"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn class="w-100" Size="12" SizeMD="9">
                        <RadzenTextArea Placeholder="Your page description" Rows="6" Cols="50" Style="border-radius: 10px"></RadzenTextArea>
                    </RadzenColumn>   
                </RadzenRow>

                <RadzenRow>
                    <RadzenColumn Size="12" SizeMD="12">
                        <RadzenLabel Component="SocialLinks" style="width: 100%; margin-top: 8px; font-style: normal; font-weight: bold; font-size: 20px" Text="Social links"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Youtube" style="width: 100%; margin-top: 8px" Text="Youtube"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="https://www.youtube.com/channel/" Trim="false"></RadzenTextBox>
                    </RadzenColumn> 

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Instagram" style="width: 100%; margin-top: 8px" Text="Instagram"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="" Trim="false"></RadzenTextBox>
                    </RadzenColumn> 

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Telegram" style="width: 100%; margin-top: 8px" Text="Telegram"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="" Trim="false"></RadzenTextBox>
                    </RadzenColumn> 

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="TikTok" style="width: 100%; margin-top: 8px" Text="TikTok"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Facebook" style="width: 100%; margin-top: 8px" Text="Facebook"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Twitter" style="width: 100%; margin-top: 8px" Text="Twitter"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="" Trim="false"></RadzenTextBox>
                    </RadzenColumn>
                    
                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Twitch" style="width: 100%; margin-top: 8px" Text="Twitch"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Pinterest" style="width: 100%; margin-top: 8px" Text="Pinterest"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%; border-radius: 10px" Placeholder="" Trim="false"></RadzenTextBox>
                    </RadzenColumn>  

                </RadzenRow>

                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End">
                        <RadzenButton Text="Cancel" Variant="Variant.Flat" Shade="Shade.Light" Style="background-color: #d1d8e1; width: 144px; margin-top: 20px; border-radius: 10px; border: 1px solid #949aa4; color: #000000" />
                        <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" Shade="Shade.Light" Style="background-color: #58a45b; width: 144px; margin-top: 20px; border-radius: 10px; border: 1px solid #356d37" />
                </RadzenStack>
            </ChildContent>
        </RadzenTemplateForm>
    </RadzenStack>
</RadzenRow>

@code {
    DateOnly value = DateOnly.FromDateTime(DateTime.Now);
    TimeOnly timeValue = TimeOnly.FromDateTime(DateTime.Now);
}