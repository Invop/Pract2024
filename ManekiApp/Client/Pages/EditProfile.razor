@page "/edit-profile"

@attribute [Authorize]

<PageTitle>EditProfile</PageTitle>
<RadzenRow>
    <RadzenStack Style="background-color: #eee6e6; color: f2eeee Hex 242 R 238 G; padding: 20px; border-radius: 10px">
        <RadzenTemplateForm TItem="dynamic">
            <RadzenRow>
                <RadzenText Text="You can edit your personal data" Style="font-weight: bold; font-size: 20px" />
                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Username" style="width: 100%" Text="Username"></RadzenLabel>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%" Name="Username" Placeholder="Anton_pt" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Name" style="width: 100%" Text="Name"></RadzenLabel>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%" Name="Name" Placeholder="Anton" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Component="Surname" style="width: 100%" Text="Surname"></RadzenLabel>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="9">
                        <RadzenTextBox style="display: block; width: 100%" Name="Surname" Placeholder="Ptushkin" Trim="false"></RadzenTextBox>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Text="Birthday" Component="DatePickerDateOnlyType" Style="margin-right: 8px; vertical-align: middle;"/>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="9">    
                        <RadzenDatePicker @bind-Value="@value" DateFormat="MM/dd/yyyy" Name="DatePickerDateOnlyType"/>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="3">
                        <RadzenLabel Text="Your avatar" TextStyle="TextStyle.Subtitle2"></RadzenLabel>
                    </RadzenColumn>

                    <RadzenColumn Size="12" SizeMD="9">



                    </RadzenColumn>

            </RadzenRow>

            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End">
                    <RadzenButton Text="Cancel" Variant="Variant.Flat" Shade="Shade.Light" Style="background-color: #d1d8e1; width: 144px; margin-top: 20px; border-radius: 10px; border: 1px solid #949aa4; color: #000000" />
                    <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" Shade="Shade.Light" Style="background-color: #58a45b; width: 144px; margin-top: 20px; border-radius: 10px; border: 1px solid #356d37" />
            </RadzenStack>

        </RadzenTemplateForm>
    </RadzenStack>
</RadzenRow>

@code {
    DateOnly value = DateOnly.FromDateTime(DateTime.Now);
    TimeOnly timeValue = TimeOnly.FromDateTime(DateTime.Now);
}