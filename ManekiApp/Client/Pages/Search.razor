@page "/search"
@attribute [Authorize]

<PageTitle>Search</PageTitle>
<RadzenRow>
    <RadzenCard class="w-100">
        <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenTextBox Placeholder="Search..." class="w-100" aria-label="TextBox with placeholder" @bind-Value="@searchFieldValue" />
                <RadzenColumn>
                    <RadzenButton class="h-100" Click="ApplySearch">Search</RadzenButton>
                </RadzenColumn>
        </RadzenStack>
    </RadzenCard>

    <RadzenDataList @ref="datalist" Data="@authors" TItem="ManekiApp.Server.Models.ManekiAppDB.AuthorPage" class="w-100">
        <Template Context="author">
            <AuthorSearchCard
                Author="@(author)"/>
        </Template>
    </RadzenDataList>
    
    <RadzenPager @ref="pager" ShowPagingSummary="true" PagingSummaryFormat="@pagingSummaryFormat" HorizontalAlign="HorizontalAlign.Right" Count="authorsAmount" PageSize="@pageSize" PageNumbersCount="5" PageChanged="@PageChanged" />
    
</RadzenRow>