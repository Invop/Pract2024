@page "/post"
<RadzenCard Style="margin-bottom: 20px;">
    <ChildContent>
        <RadzenImage Path="@ImageUrl" />
        <h2>@Title</h2>
        <p>@Date.ToString("MMMM dd, yyyy")</p>
        
        <RadzenHtml Visible="true">
            @RawHtml(Content)
        </RadzenHtml>
    </ChildContent>
</RadzenCard>

@code {
    protected override void OnInitialized()
    {
        Title = "Sample Post Title";
        Content = "<h1>Hello World!</h1><div><br></div><div style=\"text-align: right;\"><span style=\"color: rgb(255, 0, 0); background-color: rgb(0, 0, 254);\">test<span style=\"font-style: italic;\">asd<span style=\"font-weight: bold;\">dsadas<span style=\"text-decoration-line: underline;\">dsaasdasd</span><span style=\"text-decoration-line: underline line-through;\">adsadsasdasdsad</span></span></span></span></div>";
        ImageUrl = "https://via.placeholder.com/150";
        Date = DateTime.Now;

    }
    MarkupString RawHtml(string html) => new MarkupString(html);
}

@code {

        public string Title { get; set; }
        public string Content { get; set; }
        public string ImageUrl { get; set; }
        public DateTime Date { get; set; }
    
}