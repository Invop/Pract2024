@inherits LayoutComponentBase
<RadzenComponents />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0" Style="background-color: #bdaba6">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <RadzenProfileMenu Visible="@Security.IsAuthenticated()" Click="@ProfileMenuClick" Style="background-color: #bdaba6">
                        <ChildContent>

                            <RadzenProfileMenuItem Path="profile" Icon="settings" Text="Profile" />
                            <RadzenProfileMenuItem Path="application-users" Icon="person" Text="Users" />
                            <RadzenProfileMenuItem Path="application-roles" Icon="security" Text="Roles" />
                            <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new" />
                        </ChildContent>
                        <Template>
                            @Security.User?.Name
                            <RadzenGravatar Email="@Security.User?.Name" />
                        </Template>
                    </RadzenProfileMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2; width: 274px">
        <RadzenStack Gap=7 Orientation="Orientation.Horizontal" JustifyContent="Radzen.JustifyContent.Center" AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border); background-color: #e7d8d4; height: 56px; width: 275px">
            <RadzenImage Path="images/paw.png" Style="width: 40px; float: none"></RadzenImage>
            <RadzenText Text="Maneki" Style="font-weight: bold; color: #000000; font-family: Georgia; font-size: 27px; margin-bottom: 0px; width: 107px; height: 33px" />
        </RadzenStack>
        <RadzenPanelMenu Style="font-size: 16px" Multiple="false">
            
            <RadzenPanelMenuItem Text="Feed" Path="feed" Icon="home" IconColor="black" />
            
            <RadzenPanelMenuItem Text="You" Icon="person" IconColor="black">
                <RadzenPanelMenuItem Text="Subscriptions" Path="my-subscriptions" Icon="card_membership" IconColor="black" />
                <RadzenPanelMenuItem Text="Settings" Path="settings" Icon="settings" IconColor="black" />
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Text="Author" Icon="gesture" Selected="false" IconColor="black" >
                <RadzenPanelMenuItem Text="My Page" Path="author-page" Icon="account_box" IconColor="black" />
                <RadzenPanelMenuItem Text="Manage Plans" Path="manage-plans" Icon="local_atm" IconColor="black" />
                <RadzenPanelMenuItem Text="Analytics" Path="analytics" Icon="bar_chart" IconColor="black" />
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Text="Search" Path="search" Icon="search" IconColor="black" />
        </RadzenPanelMenu>

    </RadzenSidebar>

    <RadzenButton Icon="add" Style="position: absolute; bottom: 10px; right: 10px; width: 50px; height: 50px; background-color: #bdaba6; border-radius: 50%" />
</RadzenLayout>