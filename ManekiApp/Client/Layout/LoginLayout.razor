@inherits LayoutComponentBase
@inject NavigationManager NavManager
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="background: url('images/bg-login.png'); background-size: cover;">
    <RadzenBody>
        <RadzenStack JustifyContent="Radzen.JustifyContent.Center" Class="rz-mx-auto rz-p-4" Style="max-width: 1440px; height: 100%;">
            <RadzenCard class="rz-shadow-3 rz-border-radius-4" style="padding: 0; overflow: hidden; background-color: var(--rz-base-background-color);">
                <RadzenRow Gap="0">
                    <RadzenColumn Size="12" SizeSM="6" Class=" rz-p-12" style="position: relative; background-color: #A49592">
                        <RadzenImage Path="images/maneki-logo.png" style="width: 150px; margin-top: 20px; margin-bottom: 20px"></RadzenImage>
                        <RadzenText Text="@HeaderText" TextStyle="Radzen.Blazor.TextStyle.H2"
                                    class="rz-mt-4 rz-mt-md-12 rz-pt-0 rz-pt-md-12 rz-mb-6 rz-color-on-primary rz-display-none rz-display-sm-block" Style="font-style: normal; font-family: Georgia; font-weight: bold; margin-top: 40px; padding-top: 40px" />
                        <RadzenText Text="@SubHeaderText" TextStyle="Radzen.Blazor.TextStyle.Body1"
                                    class="rz-mb-12 rz-pb-0 rz-pb-md-12 rz-color-on-primary rz-display-none rz-display-sm-block" Style="font-family: Georgia; font-size: 18px; margin-top: 30px">
                        </RadzenText>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeSM="6" class="rz-p-12" Style="background-color: #EED8C9">
                        @Body
                    </RadzenColumn>
                </RadzenRow>
            </RadzenCard>
            <RadzenText Text="ManekiApp.Server v1.0.0, Copyright â’¸ 2024" TextStyle="Radzen.Blazor.TextStyle.Caption"
                        TextAlign="Radzen.TextAlign.Center" Style="width: 100%; margin-top: 20px" TagName="Radzen.Blazor.TagName.P"/>
        </RadzenStack>
    </RadzenBody>
</RadzenLayout>

@code
{
    string HeaderText => NavManager.Uri.Contains("sign-up")
        ? "Welcome to Registration!"
        : "Welcome!";

    string SubHeaderText => NavManager.Uri.Contains("sign-up")
        ? "Fill in your registration credentials to proceed."
        : "Fill in your login credentials to proceed.";

}
