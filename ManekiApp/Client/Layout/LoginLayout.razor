@inherits LayoutComponentBase
@inject NavigationManager NavManager
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="background: url('images/bg-login.png'); background-size: cover;">
    <RadzenBody>
        <RadzenStack JustifyContent="Radzen.JustifyContent.Center" Class="rz-mx-auto rz-p-4" Style="max-width: 1440px; height: 100%;">
            <RadzenCard class="rz-shadow-3 rz-border-radius-4" style="padding: 0; overflow: hidden; background-color: var(--rz-base-background-color);">
                <RadzenRow Gap="0">
                    <RadzenColumn Size="12" SizeSM="6" Class=" rz-p-12" style="position: relative; background-color: #A49592">
                        <RadzenStack Gap=7 Orientation="Orientation.Horizontal" AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6">
                            <RadzenImage Path="images/paw.png" Style="width: 70px; float: none"></RadzenImage>
                            <RadzenText Text="Maneki" Style="font-weight: bold; color: #000000; font-family: Georgia; font-size: 40px; margin-bottom: 0px; width: 159px; height: 57px" />
                        </RadzenStack>
                                <RadzenText Text="@HeaderText" TextStyle="Radzen.Blazor.TextStyle.H2"
                                    class=" rz-pt-0 rz-pt-md-12 rz-mb-6 rz-color-on-primary rz-display-none rz-display-sm-block" Style="font-style: normal; font-family: Georgia; font-weight: bold; padding-top: 40px; margin-top: 0px" />
                        <RadzenText Text="@SubHeaderText" TextStyle="Radzen.Blazor.TextStyle.Body1"
                                    class="rz-mb-12 rz-pb-0 rz-pb-md-12 rz-color-on-primary rz-display-none rz-display-sm-block" Style="font-size: 16px; margin-top: 20px">
                        </RadzenText>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeSM="6" class="rz-p-12" Style="background-color: #EED8C9">
                        @Body
                    </RadzenColumn>
                </RadzenRow>
            </RadzenCard>
        </RadzenStack>
    </RadzenBody>
</RadzenLayout>

@code
{
    string HeaderText => NavManager.Uri.Contains("sign-up")
        ? "Welcome to Registration!"
        : "Welcome!";

    string SubHeaderText => NavManager.Uri.Contains("sign-up")
        ? "Fill in your registration credentials to proceed."
        : "Fill in your login credentials to proceed.";

}